root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[{*.go,.gitmodules,go.mod,go.sum}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
trim_trailing_whitespace = false

[*.{yml,yaml,json,proto}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,css,less,sass,scss,vue,py}]
indent_style = space
indent_size = 2
